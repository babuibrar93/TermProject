extends ../home 


block content 
        section.form.my-4.mx-5
            .container
                .row.no-gutters
                    .col-lg-5
                        img.img-fluid(src="images/home-image.jpg",  alt="") 
                    .col-lg-7.px-10.pt-2
                        h1.font-weight-bold.py3.mx-3 Admin | Sign In
                        form(action="/itemsRoutes", method="post" id="form") 
                            .form-row
                                .col-lg-7
                                input.form-control.m-3.m-4(type="email", placeholder="E-Mail", name="email")
                            .form-row
                                .col-lg-7
                                input.form-control.m-3.m-4(type="password", placeholder="*********", name=password)
                            .form-row
                                .col-lg-7
                                   a.m-3.m-4(href="/itemsRoutes", class="btn  btn-success btn-submit ") <i class="fa fa-sign-in" aria-hidden="true"></i> Sign Up 
                                    a(href="/sign-up", class="link") Did't Have Account? Click Here !!
